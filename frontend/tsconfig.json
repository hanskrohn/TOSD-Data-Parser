{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "outDir": "dist",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "strict":false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
